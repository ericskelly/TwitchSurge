{
  "name": "TwitchSurge",
  "version": "1.0",
  "description": "Get notified of surging twitch channels",
  "manifest_version": 2,
  "permissions": [
    "activeTab",
    "declarativeContent",
    "notifications",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "js": [
        "pageContent.js"
      ],
      "matches": [
        "https://*.twitch.tv/*"
      ]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  }
}